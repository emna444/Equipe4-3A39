{% extends 'base1.html.twig' %}

{% block title %}Détails de la Réponse{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center">Détails de la Réponse</h1>

        <dl class="row">
            <dt class="col-sm-3">Date :</dt>
            <dd class="col-sm-9">{{ reponse.date ? reponse.date|date('d/m/Y') : 'N/A' }}</dd>
            
            <dt class="col-sm-3">Contenu :</dt>
            <dd class="col-sm-9">{{ reponse.contenu ?: 'N/A' }}</dd>

            <dt class="col-sm-3">Réclamation :</dt>
            <dd class="col-sm-9">{{ reponse.reclamation ? reponse.reclamation.description : 'N/A' }}</dd>
        </dl>
    </div>
</div>
{% endblock %}
