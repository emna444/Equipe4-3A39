{% extends 'base1.html.twig' %}

{% block title %}Nouvelle Réponse{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center">Nouvelle Réponse</h1>

        {% if app.flashes('success_message') %}
            <div class="alert alert-success">
                {{ app.flashes('success_message')[0] }}
            </div>
        {% endif %}

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <div class="form-group">
            {{ form_label(form.date) }}
            {{ form_widget(form.date, {'attr': {'class': 'form-control', 'type': 'text', 'placeholder': 'YYMMDD'}}) }}
            {% if form_errors(form.date) %}
                <div class="invalid-feedback" style="color: red;">
                    {{ form_errors(form.date) }}
                </div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.contenu) }}
            {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.contenu) %}
                <div class="invalid-feedback" style="color: red;">
                    {{ form_errors(form.contenu) }}
                </div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.reclamation) }}
            {{ form_widget(form.reclamation, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.reclamation) %}
                <div class="invalid-feedback" style="color: red;">
                    {{ form_errors(form.reclamation) }}
                </div>
            {% endif %}
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-submit">Ajouter</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
