{% extends 'base1.html.twig' %}

{% block title %}Liste des réclamations{% endblock %}

{% block body %}
    <h1>Liste des réclamations</h1>

    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Type</th>
                <th>Priorité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for reclamation in reclamations %}
                <tr>
                    <td>{{ reclamation.date|date('Y-m-d') }}</td>
                    <td>{{ reclamation.description }}</td>
                    <td>{{ reclamation.type }}</td>
                    <td>{{ reclamation.priorite }}</td>
                    <td>
                        <a href="{{ path('app_reclamation_modifier', {'id': reclamation.id}) }}">Modifier</a>
                        <a href="{{ path('app_reclamation_supprimer', {'id': reclamation.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réclamation?')">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_ajouter') }}">Ajouter une réclamation</a>
{% endblock %}
