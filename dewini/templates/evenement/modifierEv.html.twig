{% extends 'base1.html.twig' %}

{% block body %}

    <div class="container">
        <h1 class="text-center">Ajouter un événements</h1>
    </div>

    {# Affichage des éventuelles erreurs du formulaire #}
    {% if form_errors(f) %}
        <div class="alert alert-danger">
            {{ form_errors(f) }}
        </div>
    {% endif %}
        
    {# Début du formulaire #}
    {{ form_start(f,{'attr':{'novalidate':'novalidate'}}) }}
        
    {# Champ "Nom" du evenement #}
    <div class="form-group">
        {{ form_label(f.nom) }}
        {{ form_widget(f.nom, {'attr': {'class': 'form-control'}}) }}
        <div class="form-error-message">
            {{ form_errors(f.nom) }} {# Affiche les erreurs de validation pour le champ "nom" #}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(f.date) }}
        {{ form_widget(f.date, {'attr': {'class': 'form-control'}}) }}
        <div class="form-error-message">
            {{ form_errors(f.date) }} {# Affiche les erreurs de validation pour le champ "date" #}
        </div>
    </div>

 <div class="form-group">
        {{ form_label(f.lieu) }}
        {{ form_widget(f.lieu, {'attr': {'class': 'form-control'}}) }}
        <div class="form-error-message">
            {{ form_errors(f.lieu) }} {# Affiche les erreurs de validation pour le champ "lieu" #}
        </div>
    </div>

     <div class="form-group">
        {{ form_label(f.description) }}
        {{ form_widget(f.description, {'attr': {'class': 'form-control'}}) }}
        <div class="form-error-message">
            {{ form_errors(f.description) }} {# Affiche les erreurs de validation pour le champ "description" #}
        </div>
    </div>

     
    

     {# Bouton de soumission du formulaire #}
<div class="btn-container">
    <button type="submit" class="btn btn-primary">Modifier</button>
</div>
    {# Fin du formulaire #}
    {{ form_end(f) }}
</div>
{% endblock %}
