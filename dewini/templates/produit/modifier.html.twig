{% extends 'base1.html.twig' %}

{% block body %}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card custom-card">
                  <div class="card-header text-center">
                    <h1 style="color: blue; font-size:50px;">Modifier un produit</h1>
                </div>
                <div class="card-body">
                    {# Affichage des éventuelles erreurs du formulaire #}
                    {% if form_errors(f) %}
                        <div class="alert alert-danger">
                            {{ form_errors(f) }}
                        </div>
                    {% endif %}
                    {# Début du formulaire #}
                    {{ form_start(f,{'attr':{'novalidate':'novalidate'}}) }}
                    {# Champ "Nom" du produit #}
                    <div class="form-group">
                        {{ form_label(f.nom) }}
                        {{ form_widget(f.nom, {'attr': {'class': 'form-control' ~ (form_errors(f.nom)|length > 0 ? ' is-invalid' : '')}}) }}
                        <div class="form-error-message">
                            {{ form_errors(f.nom) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(f.prix) }}
                        {{ form_widget(f.prix, {'attr': {'class': 'form-control' ~ (form_errors(f.prix)|length > 0 ? ' is-invalid' : '')}}) }}
                        <div class="form-error-message">
                            {{ form_errors(f.prix) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(f.photo,'Sélectionner une photo') }}
                        {{ form_widget(f.photo, {'attr': {'class': 'form-control' ~ (form_errors(f.photo)|length > 0 ? ' is-invalid' : '')}}) }}
                    </div>
                    <div class="form-error-message">
                        {{ form_errors(f.photo) }}
                    </div>
                    {# Bouton de soumission du formulaire #}
                  <div class="text-center" style="margin-top: 15px;">
    <button type="submit" class="btn btn-primary">modifier</button>
</div>
                    {# Fin du formulaire #}
                    {{ form_end(f) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
