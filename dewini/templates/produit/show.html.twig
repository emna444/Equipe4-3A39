{% extends 'base.html.twig' %}

{% block body %}
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top p-0 wow fadeIn" data-wow-delay="0.1s">
        <!-- Votre code pour le navbar ici -->
    </nav>
    <!-- Fin du Navbar -->

    <!-- Contenu principal -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <div class="zoom-on-hover" style="display: flex; justify-content: center; align-items: center; height: 300px;">
                            <img class="card-img-top product-img" style="width: auto; height: 100%;" src="{{ asset('uploads/' ~ p.ImageName) }}" alt="{{ p.nom }}">
                        </div>
                        <div class="text-center mt-3">
                            <h5 class="card-title">{{ p.nom }}</h5>
                            <p class="card-text">{{ p.prix }} DT</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Afficher les avis associés à ce produit -->
    <div class="container mt-5">
        <div class="row">
            {% if avisProduit is empty %}
                <div class="col-md-12">
                    <div class="alert alert-info" role="alert">
                        Soyez le premier à donner votre avis sur ce produit !
                    </div>
                </div>
            {% else %}
                {% for avi in avisProduit %}
                    <div class="col-md-4 mb-4">
                        <div class="card border-primary shadow rounded-lg">
                            <div class="card-body">
                                <h5 class="card-title">Avis {{ loop.index }}</h5>
                                <p class="card-text">{{ avi.commentaire }}</p>
                                <p class="card-text">
                                    {% for i in 1..5 %}
                                        {% if i <= avi.note %}
                                            <span class="fa fa-star checked"></span>
                                        {% else %}
                                            <span class="fa fa-star"></span>
                                        {% endif %}
                                    {% endfor %}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    <!-- Affichage du formulaire pour soumettre un avis -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Donner votre avis</h5>
                        {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_row(form.commentaire, {'attr': {'class': 'form-control', 'id': 'commentaire', 'placeholder': 'Partagez votre avis...'}, 'label': false}) }}
                            </div>
                            <div class="form-group">
                                <p class="mb-2">Sélectionnez votre note :</p>
                                <div class="form-group">
                                    {{ form_row(form.note, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                             <div class="form-group">
                                    {{ form_row(form.captcha, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.captcha) }}

                                </div>
                            <div class="form-group text-center" style="margin-top: 20px;">
                                {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Fin du contenu principal -->

    <!-- Intégration du script JavaScript -->
    <style>
        .star {
            font-size: 1.5rem;
        }
        
        .checked {
            color: orange;
        }

        .card {
            transition: transform 0.3s;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .form-control {
            border-radius: 20px;
        }
    </style>
{% endblock %}
