{% block body %}

<h2> Statistique de Reclamations </h2>
 <div id="container"></div>
 <hr/>
    <div id="statsbymonth"></div>
    {% endblock %}
 {% block js %} 
 <script>
Highcharts.chart('container', {
    chart: {
        type: 'pie'
    },
    title: {
        text: 'Statistique de satisfaction des clients '
    },
    tooltip: {
        valueSuffix: '%'
    },
   
    plotOptions: {
        series: {
            allowPointSelect: true,
            cursor: 'pointer',
            dataLabels: [{
                enabled: true,
                distance: 20
            }, {
                enabled: true,
                distance: -40,
                format: '{point.percentage:.1f}%',
                style: {
                    fontSize: '1.2em',
                    textOutline: 'none',
                    opacity: 0.7
                },
                filter: {
                    operator: '>',
                    property: 'percentage',
                    value: 10
                }
            }]
        }
    },
    series: [
        {
            name: 'Percentage',
            colorByPoint: true,
            data: [
                {% for stat in tabStats %}
                {
                    name: "{{stat['type']}}",
                    y: {{stat['count']}}
                },
{% endfor %}
                 ]
        }
    ]
});

 
 </script>
