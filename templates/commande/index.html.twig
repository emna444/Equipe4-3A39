                {% for p in response %}
                    <tr class="table-row">
                        <td><span style="color: blue;">{{ p.id }}</span></td>
                        <td>{{ p.reference }}</td>
                      <td>
    <a href="{{ path('admin_telecharger_details_commande', {'id': p.id}) }}" class="btn btn-primary">
        <i class="fas fa-file-download"></i> Facture
    </a>
</td>

                        <td>
                            <a href="{{ path('admin_deletecommande', {'id': p.id}) }}" class="btn btn-danger">
