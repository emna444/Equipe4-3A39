{% extends 'back.html.twig' %}

{% block title %}Modifier Réclamation{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">Modifier Réclamation</h1>
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.priorite, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.commentaires, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-submit">Modifier</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
